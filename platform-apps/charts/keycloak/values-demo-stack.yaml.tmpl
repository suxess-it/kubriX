keycloak:
  ingress:
  # ingress tls not implemented yet, we need to create our own ingress resource
    enabled: false

  readinessProbe:
    periodSeconds: 20
    failureThreshold: 5
  livenessProbe:
    periodSeconds: 20
    failureThreshold: 5
  startupProbe:
    periodSeconds: 20
    failureThreshold: 5

  resources:
    requests:
      memory: "512Mi"
      cpu: "150m"
    limits:
      memory: "1Gi"
      cpu: "1"

  networkPolicy:
    enabled: false

  additionalOptions:
    - name: "metrics-enabled"
      value: "true"
    - name: "health-enabled"
      value: "true"

    # serviceMonitor: # not yet implemented in keycloak, https://github.com/keycloak/keycloak/issues/40406, we need to create our own servicemonitor

  db:
    usernameSecret:
      name: cp-keycloak-externaldb-secret
      key: POSTGRES_USER
    passwordSecret:
      name: cp-keycloak-externaldb-secret
      key: POSTGRES_PASSWORD
    port: 5432

