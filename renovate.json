{
  "configMigration": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "crossplane": {
    "fileMatch": [
      ".+provider\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "major": {
        "semanticCommitType": "feat",
        "commitBody": "BREAKING CHANGE: new upstream major version"
      },
      "minor": {
        "semanticCommitType": "feat"
      },
      "patch": {
        "semanticCommitType": "fix"
      }
    }
  ]
}
