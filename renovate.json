{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "crossplane": {
    "fileMatch": [".+provider\\.yaml$"]
  },
  "dependencies": {
    "major": {
      "semanticCommitType": "feat(deps)!"
    },
    "minor": {
      "semanticCommitType": "feat(deps)" 
    },
    "patch": {
      "semanticCommitType": "fix(deps)"
    }
  }
}
