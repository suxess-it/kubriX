{
  "configMigration": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "crossplane": {
    "fileMatch": [
      ".+provider\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "major": {
        "semanticCommitType": "feat(deps)!"
      },
      "minor": {
        "semanticCommitType": "feat(deps)"
      },
      "patch": {
        "semanticCommitType": "fix(deps)"
      }
    }
  ]
}
